<div class="container">
    <text class="you-may-like">{{ $t('strings.may_like') }}</text>
    <div class="card-box">
        <div class="card-content" for="{{ cardData }}">
            <div class="card-image-style">
                <image class="card-pictures" src="{{ $item.image }}"></image>
            </div>
            <div class="card-content-margin">
                <text class="card-title">{{ $t($item.title) }}</text>
                <text class="card-price">{{ $item.price }}</text>
                <div class="card-tag-box">
                    <text class="card-tag">{{ $t($item.tag) }}</text>
                </div>
                <div class="card-review-box">
                    <text class="card-review">{{ $t($item.reviewNum) }}</text>
                    <text class="card-review card-positive-reviews">{{ $t($item.positiveReviews) }}</text>
                </div>
            </div>
        </div>
    </div>
</div>